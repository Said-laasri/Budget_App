<h2 class='text-2xl font-bold text-center'>    Welcome</h2>

<% if current_user %>
    <p class='text-1xl py-6 text-center'>  You are logged in as <%= current_user.name %></p>
 <button type="button" class=" mt-9 pb-4 text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-2">
    <%= link_to "Log out", '/users/sign_out', method: :delete %>
  </button> 

   <button type="button" class=" mt-9 pb-4 text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-2">
    <%= link_to "Category",'/categories/' %>
  </button> 

<% else %>
    <p class='text-1xl font-bold py-6 text-center'>  You are not logged in</p>
 <button type="button" class=" mt-9 pb-4 text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-2">
    <%= link_to "Sign up",'/users/sign_up' %>
  </button> 

 <button type="button" class=" mt-9 pb-4 text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-2">
    <%= link_to "Log in",'/users/sign_in' %>
  </button> 
<% end %>